<% include ./partials/header %>
<div class="container offset-from-top">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Reset Password</h1>
        </div>
        <div class="col-md-6 offset-md-3 mt-5">
            <form action="/reset/<%= token %>" method="POST">
              <div class="form-group">
                  <label for="password">New Password</label>
                  <input type="password" name="password" value=""id="password" placeholder="New Password" class="form-control" required>
                </div>
                <div class="form-group">
                  <label for="confirm">Confirm Password</label>
                  <input type="password" name="confirm" value="" id="confirm" placeholder="Confirm Password" class="form-control" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Reset Password</button>
                </div>
            </form>
            <a href="/campgrounds">All Campgrounds</a>
        </div>
    </div>
</div>
<% include ./partials/footer %>