<% include ./partials/header %>
<section id="reset-page-section">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12 text-center mt-5">
                <h1>Reset Password</h1>
            </div>
            <div class="col-lg-6 offset-lg-3 mt-5">
                <form action="/reset/<%= token %>" method="POST">
                    <div class="form-group">
                        <label for="password">New Password</label>
                        <input type="password" name="password" value="" id="password" placeholder="New Password"
                            class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="confirm">Confirm Password</label>
                        <input type="password" name="confirm" value="" id="confirm" placeholder="Confirm Password"
                            class="form-control" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-custom btn-greenish-full btn-block" type="submit">Reset Password</button>
                    </div>
                </form>
                <div class="text-center">
                    <a href="/campgrounds">All Campgrounds</a>
                </div>
            </div>
        </div>
    </div>
</section>
<% include ./partials/footer-scripts-only %>