<% include ../partials/header %>
<section id="edit-campground-section">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12 text-center mt-5">
                <h1>Edit <%=campground.name%></h1>
            </div>
            <div class="col-lg-6 offset-lg-3 mt-4">
                <form action="/campgrounds/<%=campground.slug%>?_method=PUT" method="POST"
                    enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" value="<%=campground.name%>" id="name"
                            name="campground[name]"></div>
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input class="form-control" type="text" name="campground[location]" id="location"
                            placeholder="<%= campground.location %>">
                        <p><em>NOTE: If you leave this empty, campground's location will remain unchanged.</em></p>
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" class="form-control" id="price" value="<%=campground.price%>"
                            name="campground[price]" min="0" step="0.01">
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input type="file" name="image" id="image" accept="image/*">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" class="form-control" value="<%= campground.description %>"
                            name="campground[description]" id="description">
                    </div>
                    <div class="form-group mt-5">
                        <button class="btn btn-custom btn-greenish-full btn-block">Submit</button>
                    </div>
                </form>
                <div class="text-center">
                    <a href="/campgrounds">All Campgrounds</a>
                </div>
            </div>
        </div>
    </div>
</section>
<% include ../partials/footer-scripts-only %>