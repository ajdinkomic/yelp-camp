<% include ../partials/header %>
<div class="container offset-from-top">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Edit <%=campground.name%></h1>
        </div>
        <div class="col-md-6 offset-md-3 mt-5">
            <form action="/campgrounds/<%=campground.slug%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" value="<%=campground.name%>" id="name"
                        name="campground[name]"></div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        placeholder="<%= campground.location %>">
                        <small>If you leave this field empty, campground's location will remain unchanged.</small>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" id="price" value="<%=campground.price%>"
                        name="campground[price]" min="0" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" name="image" id="image" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" value="<%= campground.description %>"
                        name="campground[description]" id="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">All Campgrounds</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>